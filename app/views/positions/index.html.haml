/     %tr
/       %td= p.inspect

%table.table
  %thead
    %tr
      %th
      %th.text-end Balance
  %tbody
    - @positions.each do |s|
      - position = @account.trades.where(security: s).order(date: :asc, id: :asc).last
      - next if position.quantity_balance == 0
      %tr
        %th= position.security.name
        %th.text-end= number_with_precision(position.quantity_balance, delimiter: ",", precision: 4, strip_insignificant_zeros: true)

