= form_for @security do |f|
  - if @security.errors.any?
    #error_explanation
      %h2= "#{pluralize(@security.errors.count, "error")} prohibited this security from being saved:"
      %ul
        - @security.errors.full_messages.each do |message|
          %li= message

  .col-lg-6
    .mb-3
      = f.label :name, class: 'form-label'
      = f.text_field :name, class: 'form-control'

  .col-lg-3
    .mb-3
      = f.label :symbol
      = f.text_field :symbol, class: 'form-control'

    .mb-3
      = f.label :currency, class: 'form-label'
      = f.collection_select :currency_id, Currency.all, :id, :name,{}, { class: 'form-select' }

    .mt-3
      = f.submit class: 'btn btn-primary'
