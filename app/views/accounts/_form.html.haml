= form_for @account do |f|
  - if @account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @account.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :currency_id
    = f.text_field :currency_id
  .actions
    = f.submit 'Save'
