= form_for @account do |f|
  - if @account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @account.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = f.label :title, class: 'form-label'
    = f.text_field :title, class: 'form-control'
  .col-lg-3
    .mb-3
      = f.label :number, class: 'form-label'
      = f.text_field :number, class: 'form-control'
    .mb-3
      = f.label :currency_id, class: 'form-label'
      = f.collection_select :currency_id, Currency.all, :id, :name, {}, class: 'form-select'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
