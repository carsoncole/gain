= form_for @currency do |f|
  - if @currency.errors.any?
    #error_explanation
      %h2= "#{pluralize(@currency.errors.count, "error")} prohibited this currency from being saved:"
      %ul
        - @currency.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = f.label :name, class: 'form-label'
    = f.text_field :name, class: "form-control"
  .col-lg-3
    .mb-3
      = f.label :symbol, class: 'form-label'
      = f.text_field :symbol, class: "form-control"
  .mb-3
    = f.submit class: 'btn btn-primary'
